{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ASTRAL",
    "version": "0.1.0",
    "identifier": "com.astral.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ]
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "ASTRAL",
                "width": 1280,
                "height": 720,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": false,
                "skipTaskbar": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {}
}